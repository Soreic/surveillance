lib:
	RCMD SHLIB --output=surveillance surveillance.c stcd-assuncaocorrea.cc # twins.cc 

liblinux:
	R CMD SHLIB surveillance.c

plain:
	gcc surveillance.c -lm

test:
	R --vanilla < fast_glr.R	

